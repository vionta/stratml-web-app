	<security-constraint>
		<display-name>GenericSecurityconstraint1</display-name>
		<web-resource-collection>
			<web-resource-name>genpages</web-resource-name>
			<url-pattern>/static/*</url-pattern>
		</web-resource-collection>
<!-- 		<web-resource-collection> -->
<!-- 			<web-resource-name>genpages</web-resource-name> -->
<!-- 			<url-pattern>/rest/*</url-pattern> -->
<!-- 		</web-resource-collection> -->

		<auth-constraint>
			<role-name>genrole</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>GenericSecurityconstraint2</display-name>
		<web-resource-collection>
			<web-resource-name>genpages</web-resource-name>
			<url-pattern>/rest/*</url-pattern>
		</web-resource-collection>

		<auth-constraint>
			<role-name>genrole</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>UserDatabase</realm-name>		
	</login-config>
	<security-role>
		<role-name>adminrole</role-name>
	</security-role>
	<security-role>
		<role-name>genrole</role-name>
	</security-role>
	<security-role>
		<role-name>configrole</role-name>
	</security-role>

</web-app>


  
